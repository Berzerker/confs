URxvt.urgentOnBell: True
!URxvt.visualBell: True

!Xft.dpi: 102
!Xft.antialias: true
!Xft.rgba: rgb
!Xft.hinting: true
!Xft.hinstyle: hintslight

URxvt.font: xft:Consolas:pixelsize=12
URxvt.boldFont: xft:Consolas:bold:pixelsize=12
URxvt.italicFont: xft:Consolas:italic:pixelsize=12
URxvt.boldItalicFont: xft:Consolas:italic:bold:pixelsize=12
!URxvt.letterSpace: -1

URxvt.transparent: True
URxvt.tint: grey
URxvt.shading: 35

URxvt.scrollBar: false

URxvt.perl-ext-common: default,url-select
URxvt.keysym.M-Tab: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.underline: true
URxvt.url-select.launcher: /usr/bin/chromium

URxvt.saveLines: 20000

#Work with screen better
URxvt.secondaryScroll: true

